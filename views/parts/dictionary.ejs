<!--modal window-->
<div class="modal fade" id="addWordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add word to dictionary</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="wordType">Word type</label>
            <select class="form-control" id="wordType" onchange="infinitiveToggle()">
              <option value=""></option>
              <option value="verb">Verbs</option>
              <option value="noun">Nouns</option>
              <option value="adj">Adjectives</option>
              <option value="frss">Frases</option>
            </select>
          </div>
          <div class="form-group">
            <label for="wordHb">Hebrew</label>
            <input type="text" class="form-control" id="wordHb">
          </div>
          <div id="div-inf" class="form-group" style="display: none;">
            <label for="wordInf">Infinitive</label>
            <input type="text" class="form-control is-invalid" id="wordInf">
          </div>
          <div class="form-group">
            <label for="wordRu">English</label>
            <input type="text" class="form-control" id="wordEn">
          </div>
          <div class="form-group">
            <label for="wordTr">Transcription</label>
            <input type="text" class="form-control" id="wordTr">
          </div>
        </form>
        <div id="modal-alert" class="text-danger"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="saveWord()" >Save</button>
      </div>
    </div>
  </div>
</div>
<!--//modal window-->
<!--dictionary main panel-->
<nav style="padding-top: 15px;" class="navbar navbar-expand-lg navbar-light bg-light">
    <!--start lesson button-->
    <button id="startStop" style="min-width: 250px;" type="button" class="btn btn-success mb-2"
            onclick="startLearn()
                ">Start
        learning</button>
    <!--//start lesson button-->
    <!--search word-->
    <div class="input-group mb-2 mx-sm-3">
        <input id="searchWord" type="text" class="form-control" placeholder="search word"
        onkeyup="fillModalHb(this.value)">
        <!--<div class="input-group-append">-->
            <!--<button id="clear" class="btn btn-outline-secondary" type="button" onkeyup="clearFilter()">Clear</button>-->
        <!--</div>-->
        <div class="input-group-append">
            <button id="addbtn" class="btn btn-outline-primary" type="button" data-toggle="modal"
                    data-target="#addWordModal">Add</button>
        </div>
    </div>
    <!--//search word-->
    <div class="form-group mb-2 mx-sm-3">
        <div class="btn-group" role="group">
            <% if (userid != null) { %>
            <div class="btn-group" role="group">
                <button id="wordstatus" type="button" class="btn btn-secondary dropdown-toggle"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Rating
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a class="dropdown-item" onclick="fillDictionaryTable('all', '', '', '')"
                       href="#">All</a>
                    <a class="dropdown-item" onclick="fillDictionaryTable('not learned', '', '', '')"
                       href="#">Not learned</a>
                    <a class="dropdown-item" onclick="fillDictionaryTable('hit', '', '', '')"
                       href="#">Hits</a>
                    <a class="dropdown-item" onclick="fillDictionaryTable('miss', '', '', '')" href="#">Misses</a>
                </div>
            </div>

            <div class="btn-group" role="group">
                <button id="wordcheck" type="button" class="btn btn-secondary dropdown-toggle"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Checked
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
                    <a class="dropdown-item" onclick="fillDictionaryTable('', 'all', '', '')"
                       href="#">All</a>
                    <a class="dropdown-item" onclick="fillDictionaryTable('', 'checked', '', '')" href="#">Checked</a>
                    <a class="dropdown-item" onclick="fillDictionaryTable('', 'not checked', '', '')"
                       href="#">Not checked</a>
                </div>
            </div>

            <% } %>

            <div class="btn-group" role="group">
                <button id="wordtype" type="button" class="btn btn-secondary dropdown-toggle"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Types
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a class="dropdown-item" href="#"
                       onclick="fillDictionaryTable('', '', 'all', '')">All</a>
                    <a class="dropdown-item" href="#" onclick="fillDictionaryTable('', '', 'verb', '')">Verbs</a>
                    <a class="dropdown-item" href="#" onclick="fillDictionaryTable('', '', 'noun', '')">Nouns</a>
                    <a class="dropdown-item" href="#" onclick="fillDictionaryTable('', '', 'adj', '')">Adjective</a>
                    <a class="dropdown-item" href="#" onclick="fillDictionaryTable('', '', 'frss', '')">Frases</a>
                    <a class="dropdown-item" href="#" onclick="fillDictionaryTable('', '', 'other', '')">Other</a>
                </div>
            </div>

        </div>
    </div>

</nav>
